{
  "name": "@app/proxy",
  "private": true,
  "version": "0.9.1",
  "description": "",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "bootstrap": "npm install --no-audit --no-fund",
    "start:proxy": "NODE_ENV=development nodemon --config ./cfg-nodemon-proxy.json",
    "start:proxy:prod": "NODE_ENV=production forever start -v -c ts-node ./proxy.entry.ts",
    "restart:proxy:prod": "forever restart ./proxy.entry.ts",
    "stop:proxy:prod": "forever stop ./proxy.entry.ts",
    "ssl:greenlock": "ts-node ./scripts/ssl-greenlock",
    "ssl:greenlock:prod": "ts-node ./scripts/ssl-greenlock",
    "app:up": "ts-node ./scripts/app-up",
    "app:down": "ts-node ./scripts/app-down"
  },
  "devDependencies": {
    "@app/omni": "file:../app-omni",
    "@app/proxy": "file:./",
    "@sotaoi/api": "file:../packages/sotaoi-api",
    "@sotaoi/omni": "file:../packages/sotaoi-omni",
    "@types/node": "^14",
    "@types/yargs": "^17.0.0"
  },
  "dependencies": {
    "@app/omni": "^0.9.1",
    "@sotaoi/api": "^0.9.1",
    "@sotaoi/omni": "^0.9.1",
    "forever": "^4.0.1",
    "greenlock": "^4.0.4",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "typescript": "4.1.5",
    "yargs": "^16.1.1"
  }
}
